<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NowPlaying">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music_image"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_marginTop="@dimen/icons_margin_top"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/icons_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/previous_icon"/>

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/icons_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play_icon"/>
        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/icons_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_icon"/>

    </LinearLayout>

    <Button
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="@dimen/library_button_margin"
        android:background="@color/black_color"
        android:textColor="@color/white_color"
        android:id="@+id/library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library_button"
        />



    </LinearLayout>

